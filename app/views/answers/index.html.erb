<p id="notice"><%= notice %></p>

<h1>回答Box</h1>

<table class="table is-hoverable is-striped">
  <thead>
    <tr>
      <th class="has-text-justified">質問</th>
      <th class="has-text-justified">詳細</th>
      <th class="has-text-justified">名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question_id %></td>
        <td><%= answer.content %></td>
        <td><%= answer.name %></td>
        <td><%= link_to '詳細', answer, class: 'button is-link is-outlined' %></td>
        <td><%= link_to '編集', edit_answer_path(answer), class: 'button' %></td>
        <td><%= link_to '削除', answer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '回答する', new_answer_path, class: 'new-question button is-primary is-outlined' %>
